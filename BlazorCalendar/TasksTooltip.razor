@using BlazorCalendar.Models;
<div class="tooltip-wrapper">
    @if(Task.IsSingleDay)
    {
    <span>@Task.Caption: am @Task.DateStart.Date</span>
    }
    else
    {
    <span>@Task.Caption: @Task.DateStart.Date.ToString("dd.MM.-")@Task.DateEnd.Date.ToString("dd.MM.")</span>
    }
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public Tasks Task { get; set; } = new();
}